<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1F3"
    android:fitsSystemWindows="true"
    tools:context=".EditNotesActivity">

    <!-- NỀN TRẮNG CHÍNH -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noteContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút Back -->

        <!-- Nút Share -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Back"
            android:src="@drawable/arrowback"
            app:layout_constraintEnd_toStartOf="@+id/btnShare"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Share"
            android:src="@drawable/share"
            app:layout_constraintEnd_toStartOf="@id/btnMore"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nút Menu (3 chấm) -->
        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="More Options"
            android:src="@drawable/more_vert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Text Meta: ngày, số từ -->
        <TextView
            android:id="@+id/tvNoteMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/5/2025, 17:09 | 0 words | All"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Ô Nhập Ghi Chú -->

        <EditText
            android:id="@+id/etNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:hint="Note#1"
            android:imeOptions="flagNoExtractUi"
            android:gravity="top"
            android:inputType="textCapSentences"
            android:paddingBottom="8dp"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvNoteMeta"
            tools:layout_editor_absoluteX="8dp" />

        <EditText
            android:id="@+id/etNoteContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:imeOptions="flagNoExtractUi"
            android:background="@android:color/transparent"
            android:hint="Start writing your note..."
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:maxLines="1000"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="top|start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNoteTitle"
            app:layout_constraintVertical_bias="0.0"
            tools:text="My money is from my mommy I feel very shit today and i wanny watch my as from the bottom to comfort my self  Damn that’s gay like shit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TOOLBAR DƯỚI CÙNG -->
    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Các nút trong toolbar -->
        <ImageView
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/check_circle"
            android:contentDescription="Save Note"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/btnVoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mic"
            android:contentDescription="Voice Input"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/btnOptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/add_circle"
            android:contentDescription="More Options"
            android:padding="12dp"
            android:scaleType="centerInside" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
