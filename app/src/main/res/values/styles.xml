<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme áp dụng cho BottomSheet -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <!-- Tuỳ biến giao diện của BottomSheet -->
    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme.Znotodo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CalendarDay">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PurpleSwitch">
        <item name="thumbTint">@color/purple_500</item>
        <item name="trackTint">@color/purple_200</item>
    </style>
    <style name="PopupMonthItem">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
